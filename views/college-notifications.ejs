<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>College Notifications</title>
    <% include ./partials/head.ejs %> 
</head>

<body>
  
<% include ./partials/navbar.ejs %> 
    <div class="container-fluid container-fluid-row">
        <div class="row container-row">
            <% include ./partials/sidebar.ejs %> 
            <main role="main" class="col-md-9 ml-sm-auto pt-3 px-4 m-0">
                <!--Used to push flash messages, like 'passwords don't match' and other validation-->
                <br>
                <% include ./partials/messages %>
                <br>
                

                <% notificationList.forEach(notification => { %>
                <div class="card">
                    <div class="card-header">Posted: <%= moment(notification.createdAt).fromNow() %></div>
                    <div class="p-4">
                        <h5 class="card-title"><%= notification.title %> </h5>
                        <p class="card-text"><%= notification.body.substring(0,300) %>...</p>
                        <a href="/dashboard/notifications/<%= notification._id%>" class="btn btn-dark read-more-btn">Read
                            More</a>
                    </div>
                    </div>
                   
                <% }); %>
